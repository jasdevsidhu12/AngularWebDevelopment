{
  "compilerOptions": {
    "target": "es5",
    "types": ["node"],
    "typeRoots": ["node_modules/@types/"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2015.promise", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src",
    "outDir": "./lib"
  }
}
